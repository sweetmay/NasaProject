<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nasa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_secondary</item>
        <item name="windowNoTitle">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
    </style>

    <style name="APODFragmentElement">
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="FragmentPaddings">
        <item name="android:padding">10dp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CommonTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>
</resources>